{
  "name": "native-elements",
  "version": "0.3.0",
  "description": "Native HTML Elements with CSS superpowers.",
  "license": "Apache-2.0",
  "repository": "equinusocio/native-elements",
  "private": true,
  "workspaces": [
    "elements/*"
  ],
  "bugs": {
    "url": "https://github.com/equinusocio/native-elements/issues"
  },
  "homepage": "https://github.com/equinusocio/native-elements",
  "author": {
    "name": "Equinusocio",
    "url": "http://equinsuocha.io"
  },
  "engines": {
    "node": ">=8"
  },
  "paths": {
    "elements": "./elements",
    "scripts": "./scripts",
    "demo": "./demo"
  },
  "scripts": {
    "clean": "yarn rimraf elements/**/dist",
    "lint": "yarn stylelint elements/**/*.pcss",
    "extractVars": "node scripts/extractVars.js",
    "css:dev": "yarn postcss elements/**/*.pcss -c postcss.config.js --base elements --d elements/**/dist --ext css --verbose -w",
    "css:build": "yarn postcss elements/**/*.pcss -c postcss.config.js --base elements --d elements/**/dist --ext css --verbose",
    "serve": "yarn browser-sync start --config './browser-sync.js'",
    "dev": "yarn npm-run-all --parallel css:dev serve",
    "build": "yarn npm-run-all clean lint css:build",
    "release": "git pull && lerna version && npm run build && lerna publish --no-git-tag-version --no-push --conventional-commits",
    "release-nonpm": "git pull && npm run build && lerna version --no-git-tag-version --no-push --conventional-commits"
  },
  "files": [
    "elements"
  ],
  "keywords": [
    "elements",
    "components",
    "html",
    "css",
    "native",
    "npm",
    "ui",
    "kit"
  ],
  "devDependencies": {
    "browser-sync": "2.26.1",
    "chalk": "2.4.1",
    "cssnano": "4.1.5",
    "cssnano-preset-advanced": "4.0.3",
    "rimraf": "2.6.2",
    "eslint": "5.6.1",
    "npm-run-all": "4.1.3",
    "postcss-cli": "6.0.1",
    "postcss-easy-import": "3.0.0",
    "postcss-mixins": "6.2.0",
    "postcss-preset-env": "6.1.1",
    "postcss-reporter": "6.0.0",
    "postcss-responsive-type": "1.0.0",
    "stylelint": "9.6.0",
    "stylelint-config-standard": "18.2.0"
  }
}
