@define-mixin progress-config {
  /* Border API */
  --progressBorderColor: var(--ne-progress-border-color, hsl(0, 0%, 89%));

  /* Background API */
  --progressBackground: var(--ne-progress-background, hsl(220, 10%, 95%));
  --progressFilledColor: var(--ne-progress-filled-color, var(--progressBorderColor));

  /* Stripes API */
  --progressStripesSize: var(--ne-progress-stripe-size, 16px);
  --progressStripesColor: var(--ne-progress-stripe-colors, rgba(255, 255, 255, 0.4));

  /* Misc API */
  --progressHeight: var(--ne-progress-height, 5px);
  --progressBorderRadius: var(--ne-progress-radius, 10px);
}
