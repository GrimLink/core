@define-mixin track {
  width: 100%;
  height: var(--rangeHeight);
  transition: background-color 0.2s ease-out;
  cursor: pointer;
  box-shadow: inset 0 0 0 var(--rangeBorderWidth) var(--rangeBorderColor);
  border-radius: var(--rangeBorderRadius);
  background: var(--rangeBackground);
}

@define-mixin disabled-track {
  background-color: var(--rangeDisabledBackground);
  box-shadow: inset 0 0 0 var(--rangeBorderWidth) var(--rangeDisabledBorderColor);
  cursor: not-allowed;
}

@define-mixin thumb {
  width: var(--rangeThumbWidth);
  height: var(--rangeThumbHeight);
  border-color: transparent;
  border-radius: var(--rangeThumbRadius);
  background-color: var(--rangeThumbBackground);
  background-image: url(data:image/svg+xml;base64,);
  background-size: 40%;
  background-position: center center;
  background-repeat: no-repeat;
  cursor: pointer;
  box-shadow: var(--rangeThumbShadow);
  transition: box-shadow 0.1s ease-out, background-color 0.1s ease-out;
  appearance: none;

  &:hover {
    cursor: grab;
  }

  &:active {
    cursor: grabbing;
  }
}

@define-mixin disabled-thumb {
  background-color: var(--rangeThumbDisabledBackground);
  background-image: none;
  cursor: not-allowed;
}

@define-mixin focus-thumb {
  background-color: var(--rangeThumbActiveBackground);
  box-shadow: 0 0 0 var(--rangeOutlineWidth) var(--rangeOutlineColor);
}
