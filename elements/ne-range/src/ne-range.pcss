input[type='range'] {
  /* Border API */
  --rangeBorder: var(--ne-range-border, rgba(0, 0, 0, 0.1));
  --rangeBorderWidth: var(--ne-range-border-width, 1px);

  /* Background API */
  --rangeBackground: var(--ne-range-background, hsl(0, 0%, 97%));
  --rangeFocusBackground: var(--ne-range-focus-background, hsl(233, 64%, 62%));

  /* Thumb API */
  --rangeThumbBackground: var(--ne-range-thumb-background, #FFF);
  --rangeThumbShadow: var(--ne-range-thumb-shadow, 0 1px 2px 0 rgba(0, 0, 0, 0.16));
  --rangeThumbWidth: var(--ne-range-thumb-width, 1rem);
  --rangeThumbHeight: var(--ne-range-thumb-height, 1rem);
  --rangeThumbRadius: var(--ne-range-thumb-radius, 5px);

  /* Misc API */
  --rangeHeight: var(--ne-range-height, 5px);
  --rangeBorderRadius: var(--ne-range-radius, 10px);

  width: 100%;
  background: transparent;
  outline: 0;
  appearance: none;

  @define-mixin track {
    width: 100%;
    height: var(--rangeHeight);
    border-radius: var(--rangeBorderRadius);
    background: var(--rangeBackground);
    transition: background-color 0.2s ease-out;
    cursor: pointer;
    box-shadow: inset 0 0 0 var(--rangeBorderWidth) var(--rangeBorder);
  }

  &::-webkit-slider-runnable-track {
    @mixin track;
  }

  &::-moz-range-track {
    @mixin track;
  }

  &:focus::-moz-focus-inner {
    border: 0;
  }

  &::-ms-track {
    width: 100%;
    height: var(--rangeHeight);
    border-width: var(--rangeThumbHeight);
    border-color: transparent;
    background-color: transparent;
    color: transparent;
    transition: background-color 0.2s ease-out;
    cursor: pointer;
    box-shadow: inset 0 0 0 var(--rangeBorderWidth) var(--rangeBorder);
  }

  &::-ms-fill-upper {
    background: var(--rangeBackground);
  }

  &::-ms-fill-lower {
    background: var(--rangeBackground);
  }

  &:focus::-webkit-slider-runnable-track {
    background: var(--rangeFocusBackground);
  }

  &:focus::-moz-range-track {
    background: var(--rangeFocusBackground);
  }

  &:focus::-ms-fill-lower {
    background: var(--rangeFocusBackground);
  }

  &:focus::-ms-fill-upper {
    background: var(--rangeFocusBackground);
  }

  @define-mixin thumb {
    width: var(--rangeThumbWidth);
    height: var(--rangeThumbHeight);
    margin-top: -0.5rem;
    border-color: transparent;
    border-radius: var(--rangeThumbRadius);
    background-color: var(--rangeThumbBackground);
    background-image: url(data:image/svg+xml;base64,);
    background-size: 40%;
    background-position: center center;
    background-repeat: no-repeat;
    appearance: none;
    cursor: pointer;
    box-shadow: var(--rangeThumbShadow);
    position: relative;
  }

  &::-webkit-slider-thumb {
    @mixin thumb;
  }

  &:focus::-webkit-slider-thumb {
    box-shadow: 0 0 0 var(--hiq-outline-width, 0.2rem) var(--hiq-outline-color, hsl(210, 100%, 85%));
  }

  &::-moz-range-thumb {
    @mixin thumb;
    appearance: none;
  }

  &:focus::-moz-range-thumb {
    box-shadow: 0 0 0 var(--hiq-outline-width, 0.2rem) var(--hiq-outline-color, hsl(210, 100%, 85%));
  }

  &::-ms-thumb {
    width: var(--rangeThumbWidth);
    height: var(--rangeThumbHeight);
    border-color: transparent;
    border-radius: var(--rangeThumbRadius);
    background-color: var(--rangeThumbBackground);
    cursor: pointer;
    box-shadow: var(--rangeThumbShadow);
  }

  &:focus::-ms-thumb {
    box-shadow: 0 0 0 var(--hiq-outline-width, 0.2rem) var(--hiq-outline-color, hsl(210, 100%, 85%));
  }

  &:disabled,
  &[aria-disabled] {
    &::-webkit-slider-runnable-track {
      background-color: var(--hiq-disabled-background-color, var(--hiq-gray-lightest, hsl(220, 10%, 95%)));
      cursor: not-allowed;
    }

    &::-moz-range-track {
      background-color: var(--hiq-disabled-background-color, var(--hiq-gray-lightest, hsl(220, 10%, 95%)));
      cursor: not-allowed;
    }

    &::-ms-fill-lower {
      background-color: var(--hiq-disabled-background-color, var(--hiq-gray-lightest, hsl(220, 10%, 95%)));
      cursor: not-allowed;
    }

    &::-ms-fill-upper {
      background-color: var(--hiq-disabled-background-color, var(--hiq-gray-lightest, hsl(220, 10%, 95%)));
      cursor: not-allowed;
    }

    &::-webkit-slider-thumb {
      background-color: var(--hiq-range-input-thumb-disabled-background-color, var(--hiq-gray-lighter, hsl(210, 10%, 90%)));
      cursor: not-allowed;
    }

    &::-moz-range-thumb {
      background-color: var(--hiq-range-input-thumb-disabled-background-color, var(--hiq-gray-lighter, hsl(210, 10%, 90%)));
      cursor: not-allowed;
    }

    &::-ms-thumb {
      background-color: var(--hiq-range-input-thumb-disabled-background-color, var(--hiq-gray-lighter, hsl(210, 10%, 90%)));
      cursor: not-allowed;
    }
  }
}
