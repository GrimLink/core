input[type='range'] {
  /* Border API */
  --rangeBorderColor: var(--ne-range-border-color, rgba(0, 0, 0, 0.1));
  --rangeDisabledBorderColor: var(--ne-range-disabled-border-color, rgba(0, 0, 0, 0));
  --rangeBorderWidth: var(--ne-range-border-width, 1px);

  /* Background API */
  --rangeBackground: var(--ne-range-background, hsl(0, 0%, 97%));
  --rangeDisabledBackground: var(--ne-range-disabled-background, hsl(0, 0%, 97%));
  --rangeFocusBackground: var(--ne-range-focus-background, hsl(0, 0%, 97%));

  /* Thumb API */
  --rangeThumbBackground: var(--ne-range-thumb-background, #FFF);
  --rangeThumbActiveBackground: var(--ne-range-thumb-active-background, hsl(233, 64%, 62%));
  --rangeThumbDisabledBackground: var(--ne-range-thumb-disabled-background, hsl(0, 0%, 98%));
  --rangeThumbShadow: var(--ne-range-thumb-shadow, 0 1px 2px 0 rgba(0, 0, 0, 0.16));
  --rangeThumbWidth: var(--ne-range-thumb-width, 1rem);
  --rangeThumbHeight: var(--ne-range-thumb-height, 1.2rem);
  --rangeThumbRadius: var(--ne-range-thumb-radius, 5px);

  /* Misc API */
  --rangeHeight: var(--ne-range-height, 5px);
  --rangeBorderRadius: var(--ne-range-radius, 10px);
  --rangeOutlineColor: var(--ne-range-outline-color, hsl(233, 64%, 82%));
  --rangeOutlineWidth: var(--ne-range-outline-width, 0.2rem);

  width: 100%;
  background: transparent;
  outline: 0;
  margin: 0;
  appearance: none;

  @define-mixin track {
    width: 100%;
    height: var(--rangeHeight);
    transition: background-color 0.2s ease-out;
    cursor: pointer;
    box-shadow: inset 0 0 0 var(--rangeBorderWidth) var(--rangeBorderColor);
  }

  &::-webkit-slider-runnable-track {
    @mixin track;

    border-radius: var(--rangeBorderRadius);
    background: var(--rangeBackground);
  }

  &::-moz-range-track {
    @mixin track;

    border-radius: var(--rangeBorderRadius);
    background: var(--rangeBackground);
  }

  &::-moz-focus-outer {
    border: 0;
  }

  &::-ms-track {
    @mixin track;

    color: transparent;
    border-color: transparent;
    background-color: transparent;
    border-width: var(--rangeThumbHeight);
  }

  &::-ms-fill-upper {
    background: var(--rangeBackground);
  }

  &::-ms-fill-lower {
    background: var(--rangeBackground);
  }

  &:focus::-webkit-slider-runnable-track {
    background: var(--rangeFocusBackground);
  }

  &:focus::-moz-range-track {
    background: var(--rangeFocusBackground);
  }

  &:focus::-ms-fill-lower {
    background: var(--rangeFocusBackground);
  }

  &:focus::-ms-fill-upper {
    background: var(--rangeFocusBackground);
  }

  @define-mixin thumb {
    width: var(--rangeThumbWidth);
    height: var(--rangeThumbHeight);
    border-color: transparent;
    border-radius: var(--rangeThumbRadius);
    background-color: var(--rangeThumbBackground);
    background-image: url(data:image/svg+xml;base64,);
    background-size: 40%;
    background-position: center center;
    background-repeat: no-repeat;
    cursor: pointer;
    box-shadow: var(--rangeThumbShadow);

    &:hover {
      cursor: grab;
    }

    &:active {
      cursor: grabbing;
    }
  }

  &::-webkit-slider-thumb {
    @mixin thumb;

    margin-top: -0.5rem;
    appearance: none;
    position: relative;
  }

  &::-moz-range-thumb {
    @mixin thumb;

    margin-top: -0.5rem;
    appearance: none;
    position: relative;
  }

  &:active::-webkit-slider-thumb {
    transform: scale(1.1);
    background-color: var(--rangeThumbActiveBackground);
  }

  &:active::-moz-range-thumb {
    transform: scale(1.1);
    background-color: var(--rangeThumbActiveBackground);
  }

  &:active::-ms-thumb {
    transform: scale(1.1);
    background-color: var(--rangeThumbActiveBackground);
  }

  &:not(:active):focus::-webkit-slider-thumb {
    background-color: var(--rangeThumbActiveBackground);
    box-shadow: 0 0 0 var(--rangeOutlineWidth) var(--rangeOutlineColor);
  }

  &:not(:active):focus::-moz-range-thumb {
    background-color: var(--rangeThumbActiveBackground);
    box-shadow: 0 0 0 var(--rangeOutlineWidth) var(--rangeOutlineColor);
  }

  &:not(:active):focus::-ms-thumb {
    background-color: var(--rangeThumbActiveBackground);
    box-shadow: 0 0 0 var(--rangeOutlineWidth) var(--rangeOutlineColor);
  }

  &::-ms-thumb {
    @mixin thumb;
  }

  &:disabled,
  &[aria-disabled] {
    &::-webkit-slider-runnable-track {
      background-color: var(--rangeDisabledBackground);
      box-shadow: inset 0 0 0 var(--rangeBorderWidth) var(--rangeDisabledBorderColor);
      cursor: not-allowed;
    }

    &::-moz-range-track {
      background-color: var(--rangeDisabledBackground);
      box-shadow: inset 0 0 0 var(--rangeBorderWidth) var(--rangeDisabledBorderColor);
      cursor: not-allowed;
    }

    &::-ms-fill-lower {
      background-color: var(--rangeDisabledBackground);
      box-shadow: inset 0 0 0 var(--rangeBorderWidth) var(--rangeDisabledBorderColor);
      cursor: not-allowed;
    }

    &::-ms-fill-upper {
      background-color: var(--rangeDisabledBackground);
      box-shadow: inset 0 0 0 var(--rangeBorderWidth) var(--rangeDisabledBorderColor);
      cursor: not-allowed;
    }

    &::-webkit-slider-thumb {
      background-color: var(--rangeThumbDisabledBackground);
      background-image: none;
      cursor: not-allowed;
    }

    &::-moz-range-thumb {
      background-color: var(--rangeThumbDisabledBackground);
      background-image: none;
      cursor: not-allowed;
    }

    &::-ms-thumb {
      background-color: var(--rangeThumbDisabledBackground);
      background-image: none;
      cursor: not-allowed;
    }
  }
}
