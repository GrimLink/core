button,
[role='button'] {
  /* Border API */
  --buttonBorder: var(--nue-button-border, 0);
  --buttonHoverBorder: var(--nue-button-hover-border, 0);
  --buttonFocusBorder: var(--nue-button-focus-border, 0);
  --buttonActiveBorder: var(--nue-button-active-border, 0);
  --buttonDisabledBorder: var(--nue-button-disabled-border, 0);

  /* Background API */
  --buttonBackground: var(--nue-button-background, hsl(233, 64%, 62%));
  --buttonHoverBackground: var(--nue-button-hover-background, hsl(233, 64%, 52%));
  --buttonFocusBackground: var(--nue-button-focus-background, hsl(233, 64%, 52%));
  --buttonActiveBackground: var(--nue-button-active-background, hsl(233, 64%, 32%));
  --buttonDisabledBackground: var(--nue-button-disabled-background, hsl(220, 10%, 95%));

  /* Foreground API */
  --buttonForeground: var(--nue-button-foreground, #FFF);
  --buttonHoverForeground: var(--nue-button-hover-foreground, #FFF);
  --buttonFocusForeground: var(--nue-button-focus-foreground, #FFF);
  --buttonActiveForeground: var(--nue-button-active-foreground, #FFF);
  --buttonDisabledForeground: var(--nue-button-disabled-foreground, hsl(220, 10%, 60%));

  /* Icon API */
  --buttonIconMargin: var(--nue-button-icon-margin, calc(2rem / 2.2));
  --buttonIconSeparator: var(--nue-button-icon-separator, rgba(255, 255, 255, 0.3));
  --buttonDisabledIconSeparator: var(--nue-button-disabled-icon-separator, rgba(143, 150, 163, 0.3));

  /* Misc API */
  --buttonBorderRadius: var(--nue-button-radius, 5px);
  --buttonFontWeight: var(--nue-button-font-weight, 700);
  --buttonFontSize: var(--nue-button-font-size, inherit);
  --buttonPadding: var(--nue-button-y-padding, 1rem) var(--nue-button-x-padding, 2rem);
  --buttonOutlineColor: var(--nue-button-outline-color, hsl(233, 64%, 82%));
  --buttonShadow: var(--nue-button-shadow, 0 1px 2px rgba(0, 0, 0, 0.16));

  box-sizing: border-box;
  appearance: button;
  user-select: none;
  -webkit-touch-callout: none;
  margin: 0;
  cursor: pointer;
  font-family: inherit;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  line-height: hinerit;
  text-decoration: none;
  outline: none;
  white-space: nowrap;
  border: var(--buttonBorder);
  background: var(--buttonBackground);
  border-radius: var(--buttonBorderRadius);
  font-weight: var(--buttonFontWeight);
  color: var(--buttonForeground);
  padding: var(--buttonPadding);
  font-size: var(--buttonFontSize);
  box-shadow: var(--buttonShadow);

  &:hover {
    border-color: var(--buttonHoverBorder);
    background-color: var(--buttonHoverBackground);
    color: var(--buttonHoverForeground);
  }

  /* Simulate focus outline with box-shadow */
  &:focus,
  &:active {
    box-shadow: 0 0 0 0.2rem var(--buttonOutlineColor);
  }

  &:focus {
    border: var(--buttonFocusBorder);
    background: var(--buttonFocusBackground);
    color: var(--buttonFocusForeground);
  }

  &:not(:disabled, [aria-disabled]):active {
    transform: translateY(1px);
    border: var(--buttonActiveBorder);
    background: var(--buttonActiveBackground);
    color: var(--buttonActiveForeground);
  }

  &:disabled,
  &[aria-disabled] {
    cursor: not-allowed;
    box-shadow: none;
    border: var(--buttonDisabledBorder);
    background: var(--buttonDisabledBackground);
    color: var(--buttonDisabledForeground);
  }

  & i {
    display: block;
    color: inherit;
    fill: inherit;
    line-height: inherit;
    margin-right: var(--buttonIconMargin);
    padding-right: var(--buttonIconMargin);
    border-right: 1px solid var(--buttonIconSeparator);
  }

  &[icon-right] i {
    margin-right: 0;
    padding-right: 0;
    border-right: 0;
    margin-left: var(--buttonIconMargin);
    padding-left: var(--buttonIconMargin);
    border-left: 1px solid var(--buttonIconSeparator);
  }

  &[disabled] i {
    border-right: 1px solid var(--buttonDisabledIconSeparator);
  }
}
