table {
  width: 100%;
  border-collapse: collapse;
  background: env(--tableBackground);
}

thead {
  border-bottom: env(--tableHeadSeparator);
  text-align: left;
}

td,
th {
  padding: env(--tableCellsYPadding) env(--tableCellsXPadding);
}

tr + tr {
  border-top: env(--tableRowSeparator);
}

tr:nth-child(even) {
  background: env(--tableStripedBackground);
}
