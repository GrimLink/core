@custom-selector :--icons i, svg;

button {
  @mixin button;

  & :--icons {
    color: inherit;
    fill: currentColor;
    stroke: currentColor;
    font-style: normal;
    line-height: inherit;
    margin-right: env(--buttonIconMargin);
    padding-right: env(--buttonIconMargin);
    border-right: 1px solid env(--buttonIconSeparator);
  }

  &[dir='rtl'] :--icons {
    margin-right: 0;
    padding-right: 0;
    border-right: 0;
    margin-left: env(--buttonIconMargin);
    padding-left: env(--buttonIconMargin);
    border-left: 1px solid env(--buttonIconSeparator);
  }

  &[disabled] :--icons {
    border-color: env(--buttonDisabledIconSeparator);
  }
}
